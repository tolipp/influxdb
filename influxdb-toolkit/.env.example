# InfluxDB v1 Configuration
# Used by --version 1 mode
INFLUXDB_V1_HOST=influxdbv1.mdb.ige-hslu.io
INFLUXDB_V1_PORT=8086
INFLUXDB_V1_USER=
INFLUXDB_V1_PASSWORD=
# Example databases: flimatec-langnau-am-albis_v2, meteoSwiss, wattsup
INFLUXDB_V1_DATABASE=flimatec-langnau-am-albis_v2
INFLUXDB_V1_SSL=true
INFLUXDB_V1_VERIFY_SSL=false

# InfluxDB v2 Configuration
# Used by --version 2 mode and v2 profiles
INFLUXDB_V2_URL=https://influxdbv2.mdb.ige-hslu.io
INFLUXDB_V2_TOKEN=
INFLUXDB_V2_ORG=
# Example buckets: lcm-kwh-legionellen, meteoSwiss
INFLUXDB_V2_BUCKET=lcm-kwh-legionellen

# Safety (writes are disabled by default)
INFLUXDB_ALLOW_WRITE=false
